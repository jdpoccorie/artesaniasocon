
.fm_contacts
	color #dadada	
	font-size 1em
	background #835315
	width 75%
	padding 2em
	border-radius 1em
	box-shadow 0px 0px 25px #333
	margin-bottom 2em
	position relative

	.titu_cont
		margin-bottom 1em
		font-weight bold
		color #fff
		font-size 1.4em

		span
			font-weight bold
			font-size 1.5em
			color #cf8209

	.compo_cont
		display block
		vertical-align top
		margin-top 0.5em
		margin-left 1em		

		input, textarea
			background #cdcdcc
			border 1px solid #848483			
			padding-left 0.5em
			color #333
			width 60%

		input
			height 1.5em 

		textarea
			height 10em

		.peque
			width 30%

		.estilo_bt
			width 10em
			font-weight bold
			box-shadow 2px 2px 5px #000

			&:hover
				background #cf8209
				color #000

		#ms_c_sending
			color #cf8209
			display none

	#datos_de_cont
		position absolute
		right -5em
		top 13em
		width 23em		
		background #333
		border-radius 1em
		padding 1.5em
		font-size 0.9em
		box-shadow 0 0 15px #000
		border 5px solid #835315

		p
			margin 0
			padding 0

			span
				color #f9991f
				font-weight bold

